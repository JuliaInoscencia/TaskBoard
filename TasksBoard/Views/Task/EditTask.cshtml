@model TaskBoard

<h1>Editar Tarefa</h1>

<form asp-action="EditTask" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Description" class="control-label">Descrição:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label">Status:</label>
        <select asp-for="Status" class="form-control">
            <option value="ToDo" selected="@Model.Status == TaskStatusEnum.ToDo">Para Fazer</option>
            <option value="InProgress" selected="@Model.Status == TaskStatusEnum.InProgress">Em Progresso</option>
            <option value="Done" selected="@Model.Status == TaskStatusEnum.Done">Feito</option>
        </select>

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
</form>
