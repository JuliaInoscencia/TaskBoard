@model List<TaskBoard>

<h1>Tarefas a Fazer</h1>

<table class="table">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Data de Início</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Where(t => t.Status == TaskStatusEnum.ToDo))
        {
            <tr>
                <td>@task.Description</td>
                <td>@task.StartDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-controller="Task" asp-action="InProgress" asp-route-id="@task.Id">Em Progresso</a> |
                    <a asp-controller="Task" asp-action="Done" asp-route-id="@task.Id">Concluída</a> |
                    <a asp-controller="Task" asp-action="EditTask" asp-route-id="@task.Id">Editar</a> |
                    <a asp-controller="Task" asp-action="DeleteTask" asp-route-id="@task.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
